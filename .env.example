DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rgm_analytics
DB_USER=rgm_user
DB_PASSWORD=your-password-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MongoDB (for unstructured data)
MONGO_HOST=localhost
MONGO_PORT=27017
